  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremybanka/hotc.git"
  },
  "keywords": [
    "cards",
    "dice",
    "tabletop",
    "deck",
    "shuffle",
    "game"
  ],
  "author": "Jeremy Banka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jeremybanka/wayforge/issues"
  },
  "homepage": "https://github.com/jeremybanka/wayforge#readme",
  "dependencies": {
    "eny": "^0.0.6",
    "express": "^4.17.1",
    "immer": "^9.0.3",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.23",
    "socket.io": "^4.6.1",
    "socketio-auth": "^0.1.1",
    "zustand": "^3.5.4"
  },
  "devDependencies": {
    "tsx": "3.12.5",
    "vitest": "0.29.3"
