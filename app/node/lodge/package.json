{
  "name": "hotc",
  "version": "0.0.1",
  "description": "cards and dice server library",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts ",
    "serve": "nodemon ./dist/hotc.js --watch",
    "build": "webpack build --watch",
    "start": "concurrently \"npm:build\" \"npm:serve\"",
    "pretest": "tsc --noEmit",
    "test": "vitest",
    "test:once": "cross-env CI=true vitest run"
