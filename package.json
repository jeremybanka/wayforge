{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "bun@1.0.28",
	"engines": { "bun": "1.0.28" },
	"workspaces": [
		"apps/node/*",
		"apps/web/*",
		"apps/atom.io.fyi",
		"apps/core.wayfarer.quest",
		"apps/tempest.games",
		"apps/wayfarer.quest",
		"packages/*",
		"packages/@banka/*",
		"packages/@banka/eslint-config/react",
		"packages/@banka/eslint-config/rome"
	],
	"scripts": {
		"dev": "tsc --watch",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:eslint": "turbo run lint:eslint",
		"lint:fix:biome": "biome check --apply *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write ",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once",
		"test:coverage": "cross-env CI=true turbo run test:coverage",
		"release": "bun run build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm bun.lockb"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@biomejs/cli-darwin-arm64": "1.5.3",
		"@changesets/cli": "2.27.1",
		"c8": "9.1.0",
		"cross-env": "7.0.3",
		"fp-ts": "2.16.2",
		"hamt_plus": "1.0.2",
		"io-ts": "2.2.21",
		"json-schema-to-zod": "2.0.14",
		"tsx": "4.7.1",
		"turbo": "1.12.4",
		"typescript": "5.3.3",
		"vite-tsconfig-paths": "4.3.1",
		"vitest": "1.3.1"
	}
}
