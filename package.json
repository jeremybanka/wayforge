{
  "name": "@wayforge/monorepo",
  "version": "0.0.0",
  "description": "choose your path",
  "repository": "https://github.com/jeremybanka/wayforge",
  "author": "jeremybanka",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "dev": "cd app/web/wayforge-client && yarn dev",
    "serve": "cd app/node/wayforge-server && yarn dev",
    "gen": "cd app/wayforge-server && yarn gen",
    "test": "vitest",
    "test:once": "cross-env CI=true vitest run",
    "lint": "eslint",
    "format": "eslint --fix"
  },
  "workspaces": [
    "app/web/*",
    "app/node/*",
    "packages/*",
    "packages/@banka/*",
    "lib"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "3.0.1",
    "c8": "7.12.0",
    "cross-env": "7.0.3",
    "dts-bundle-generator": "7.1.0",
    "fs-extra": "11.1.0",
    "jest-environment-jsdom": "29.3.1",
    "json-schema-to-zod": "0.6.2",
    "mock-fs": "5.2.0",
    "prettier": "2.8.2",
    "tsconfig-paths": "4.1.2",
    "tsx": "3.12.2",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-plugin-svgr": "2.4.0",
    "vite-tsconfig-paths": "4.0.3",
    "vitest": "0.27.1"
  },
  "keywords": [
    "react",
    "express",
    "typescript"
  ]
}
