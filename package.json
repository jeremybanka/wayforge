{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"type": "module",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "pnpm@10.13.1",
	"engines": {
		"bun": "1.2.1",
		"node": "24.4.1"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"gen": "turbo run gen",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:deps": "pin-checker --ignore-workspaces",
		"lint:eslint": "turbo run lint:eslint",
		"lint:types": "turbo run lint:types",
		"watch:types": "turbo run watch:types --concurrency=30",
		"lint:fix:biome": "biome check --write *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write .",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once --concurrency=2",
		"test:coverage:increased": "cross-env CI=true turbo run test:coverage:increased",
		"test:semver": "cross-env CI=true turbo run test:semver",
		"release": "bun run build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && rm pnpm-lock.yaml",
		"nv": "fnm use $(pnpm list -w --json | jq -r '.[0].path')"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@changesets/cli": "2.29.5",
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.32.0",
		"@next/eslint-plugin-next": "15.4.5",
		"@types/eslint": "9.6.1",
		"@typescript-eslint/eslint-plugin": "8.38.0",
		"@typescript-eslint/parser": "8.38.0",
		"@typescript-eslint/utils": "8.38.0",
		"@typescript/native-preview": "7.0.0-dev.20250729.2",
		"c8": "10.1.3",
		"cross-env": "10.0.0",
		"eslint-plugin-drizzle": "0.2.3",
		"eslint-plugin-import-x": "4.16.1",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-storybook": "9.0.18",
		"jiti": "2.5.1",
		"pin-dependencies-checker": "2.6.1",
		"turbo": "2.5.5",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	}
}
