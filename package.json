{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "yarn@3.6.1",
	"scripts": {
		"lint": "turbo run lint",
		"lint:fix": "rome check --apply *",
		"fmt": "rome format .",
		"fmt:fix": "rome format --write ",
		"build": "turbo run build",
		"test": "cross-env CI=true turbo run test:once",
		"release": "yarn build && changeset publish",
		"notes": "changeset"
	},
	"workspaces": [
		"apps/web/*",
		"apps/node/*",
		"packages/*",
		"packages/@banka/*",
		"packages/@banka/eslint-config/react",
		"lib"
	],
	"devDependencies": {
		"@changesets/cli": "2.26.2",
		"c8": "8.0.0",
		"cross-env": "7.0.3",
		"fp-ts": "2.16.0",
		"json-schema-to-zod": "1.1.0",
		"mock-fs": "5.2.0",
		"rome": "12.1.3",
		"tsx": "3.12.7",
		"turbo": "1.10.7",
		"typescript": "5.1.6",
		"vitest": "0.33.0"
	},
	"keywords": [
		"react",
		"express",
		"typescript"
	]
}
