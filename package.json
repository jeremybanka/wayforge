{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "pnpm@8.10.2",
	"engines": { "pnpm": "8.10.2" },
	"scripts": {
		"dev": "tsc --watch",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:eslint": "turbo run lint:eslint",
		"lint:fix:biome": "biome check --apply *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write ",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once",
		"release": "pnpm build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm pnpm-lock.yaml"
	},
	"devDependencies": {
		"@changesets/cli": "2.26.2",
		"c8": "8.0.1",
		"cross-env": "7.0.3",
		"fp-ts": "2.16.1",
		"hamt_plus": "1.0.2",
		"io-ts": "2.2.20",
		"json-schema-to-zod": "2.0.10",
		"@biomejs/biome": "1.3.3",
		"@biomejs/cli-darwin-arm64": "1.3.3",
		"tsx": "4.1.3",
		"turbo": "1.10.16",
		"typescript": "5.2.2",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "0.34.6"
	}
}
