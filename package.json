{
  "name": "@wayforge/monorepo",
  "version": "0.0.0",
  "description": "choose your path",
  "repository": "https://github.com/jeremybanka/wayforge",
  "author": "jeremybanka",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "scripts": {
    "lodge": "cd app/node/lodge && yarn start",
    "dev": "cd app/web/smithy && yarn dev",
    "serve": "cd app/node/forge && yarn dev",
    "gen": "cd app/node/forge && yarn gen",
    "lint": "turbo run lint",
    "format": "eslint --fix",
    "build": "turbo run build",
    "test": "cross-env CI=true turbo run test:once",
    "release": "yarn build && changeset publish",
    "notes": "changeset"
  },
  "workspaces": [
    "app/web/*",
    "app/node/*",
    "packages/*",
    "packages/@banka/*",
    "packages/@banka/eslint-config/react",
    "lib"
  ],
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "c8": "8.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.44.0",
    "fs-extra": "11.1.1",
    "json-schema-to-zod": "1.1.0",
    "mock-fs": "5.2.0",
    "prettier": "3.0.0",
    "tsx": "3.12.7",
    "turbo": "1.10.7",
    "typescript": "5.1.6"
  },
  "keywords": [
    "react",
    "express",
    "typescript"
  ]
}
