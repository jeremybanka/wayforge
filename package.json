{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "pnpm@8.6.12",
	"engines": { "pnpm": "8.6.12" },
	"scripts": {
		"lint": "turbo run lint",
		"lint:rome": "turbo run lint:rome",
		"lint:eslint": "turbo run lint:eslint",
		"lint:fix:rome": "rome check --apply *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "rome format .",
		"fmt:fix": "rome format --write ",
		"build": "turbo run build",
		"test": "cross-env CI=true turbo run test:once",
		"release": "pnpm build && changeset publish",
		"notes": "changeset"
	},
	"devDependencies": {
		"@changesets/cli": "2.26.2",
		"c8": "8.0.1",
		"cross-env": "7.0.3",
		"fp-ts": "2.16.1",
		"hamt_plus": "1.0.2",
		"json-schema-to-zod": "1.1.1",
		"mock-fs": "5.2.0",
		"rome": "12.1.3",
		"tsx": "3.12.7",
		"turbo": "1.10.12",
		"typescript": "5.1.6",
		"vitest": "0.34.1"
	}
}
