{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"type": "module",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "pnpm@8.15.8",
	"engines": {
		"bun": "1.1.8",
		"node": "20.13.1",
		"pnpm": "8.15.8"
	},
	"workspaces": [
		"apps/node/*",
		"apps/web/*",
		"apps/atom.io.fyi",
		"apps/core.wayfarer.quest",
		"apps/tempest.games",
		"apps/wayfarer.quest",
		"packages/*"
	],
	"scripts": {
		"dev": "tsc --watch",
		"gen": "turbo run gen",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:eslint": "turbo run lint:eslint",
		"lint:eslint:build": "turbo run lint:eslint:build",
		"lint:types": "turbo run lint:types",
		"lint:fix:biome": "biome check --apply *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write .",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once",
		"test:coverage": "cross-env CI=true turbo run test:coverage",
		"test:semver": "cross-env CI=true turbo run test:semver",
		"release": "bun run build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm pnpm-lock.yaml"
	},
	"trustedDependencies": ["@biomejs/biome"],
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@changesets/cli": "2.27.2",
		"@eslint/eslintrc": "3.0.2",
		"@eslint/js": "9.2.0",
		"@next/eslint-plugin-next": "14.2.3",
		"@typescript-eslint/eslint-plugin": "7.9.0",
		"@typescript-eslint/parser": "7.9.0",
		"c8": "9.1.0",
		"cross-env": "7.0.3",
		"eslint-plugin-simple-import-sort": "12.1.0",
		"eslint-plugin-import": "2.29.1",
		"fp-ts": "2.16.5",
		"hamt_plus": "1.0.2",
		"io-ts": "2.2.21",
		"json-schema-to-zod": "2.1.0",
		"next": "14.2.3",
		"tsx": "4.10.4",
		"turbo": "1.13.3",
		"typescript": "5.4.5",
		"vite-tsconfig-paths": "4.3.2",
		"vitest": "1.6.0"
	}
}
