{
	"name": "@wayforge/monorepo",
	"version": "0.0.0",
	"description": "choose your path",
	"type": "module",
	"repository": "https://github.com/jeremybanka/wayforge",
	"author": "jeremybanka",
	"license": "GPL-3.0",
	"private": true,
	"packageManager": "pnpm@10.8.1",
	"engines": {
		"bun": "1.2.1",
		"node": "23.11.0"
	},
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "tsc --watch",
		"gen": "turbo run gen",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:eslint": "turbo run lint:eslint",
		"lint:types": "turbo run lint:types",
		"watch:types": "turbo run watch:types --concurrency=30",
		"lint:fix:biome": "biome check --write *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write .",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once --concurrency=2",
		"test:coverage:increased": "cross-env CI=true turbo run test:coverage:increased",
		"test:semver": "cross-env CI=true turbo run test:semver",
		"release": "bun run build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && rm pnpm-lock.yaml",
		"nv": "fnm use $(pnpm list -w --json | jq -r '.[0].path')"
	},
	"trustedDependencies": ["@biomejs/biome"],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "2.29.2",
		"@eslint/eslintrc": "3.3.1",
		"@eslint/js": "9.25.0",
		"@next/eslint-plugin-next": "15.3.1",
		"@types/eslint": "9.6.1",
		"@typescript-eslint/eslint-plugin": "8.30.1",
		"@typescript-eslint/parser": "8.30.1",
		"c8": "10.1.3",
		"cross-env": "7.0.3",
		"eslint-plugin-drizzle": "0.2.3",
		"eslint-plugin-import-x": "4.10.5",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"jiti": "2.4.2",
		"turbo": "2.5.0",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@parcel/watcher",
			"@swc/core",
			"@vercel/speed-insights",
			"bun",
			"esbuild",
			"sharp",
			"workerd"
		]
	}
}
