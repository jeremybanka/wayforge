{
	"name": "flightdeck",
	"version": "0.3.26",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/flightdeck"
	},
	"type": "module",
	"files": [
		"dist",
		"gen",
		"src"
	],
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"bin": {
		"flightdeck": "./bin/flightdeck.bin.js",
		"klaxon": "./bin/klaxon.bin.js"
	},
	"dependencies": {
		"arktype": "2.1.29",
		"@t3-oss/env-core": "0.13.10",
		"atom.io": "workspace:*",
		"comline": "workspace:*",
		"cron": "4.4.0",
		"safedeposit": "workspace:*"
	},
	"scripts": {
		"gen": "bun ./__scripts__/gen.bun.ts",
		"build": "tsdown && rm -f dist/*.x.d.ts && bun ./__scripts__/build-lnav.bun.ts",
		"schema:flightdeck": "bun ./src/flightdeck.bin.ts --outdir=dist -- schema",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@biomejs/js-api": "4.0.0",
		"@biomejs/wasm-nodejs": "2.3.10",
		"@types/bun": "npm:bun-types@1.3.5",
		"@types/node": "25.0.3",
		"@types/tmp": "0.2.6",
		"@typescript/native-preview": "7.0.0-dev.20251218.1",
		"concurrently": "9.2.1",
		"eslint": "9.39.2",
		"json-schema-to-zod": "2.7.0",
		"rimraf": "6.1.2",
		"tmp": "0.2.5",
		"tsdown": "0.18.1",
		"varmint": "workspace:*",
		"vitest": "4.0.16",
		"zod": "4.2.1"
	}
}
