{
	"name": "flightdeck",
	"version": "0.2.9",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"files": ["dist", "gen", "src"],
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"bin": {
		"flightdeck": "./dist/flightdeck.bin.js",
		"klaxon": "./dist/klaxon.bin.js"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.11.1",
		"atom.io": "workspace:*",
		"comline": "workspace:*",
		"cron": "3.5.0",
		"zod": "3.24.1"
	},
	"scripts": {
		"gen": "bun ./__scripts__/gen.bun.ts",
		"build": "rimraf dist && concurrently \"bun:build:*\" && concurrently \"bun:schema:*\"",
		"build:js": "bun ./__scripts__/build.bun.ts",
		"build:dts": "tsup",
		"schema:flightdeck": "bun ./src/flightdeck.bin.ts --outdir=dist -- schema",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"test": "vitest",
		"test:once": "vitest run",
		"test:coverage": "echo no test coverage yet",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@biomejs/js-api": "0.7.1",
		"@biomejs/wasm-nodejs": "1.9.4",
		"@types/node": "22.10.9",
		"@types/tmp": "0.2.6",
		"bun-types": "1.2.0",
		"concurrently": "9.1.2",
		"json-schema-to-zod": "2.6.0",
		"rimraf": "6.0.1",
		"tmp": "0.2.3",
		"tsup": "8.3.5",
		"varmint": "workspace:*",
		"vitest": "3.0.3"
	}
}
