{
	"name": "flightdeck",
	"version": "0.2.20",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/flightdeck"
	},
	"type": "module",
	"files": ["dist", "gen", "src"],
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"bin": {
		"flightdeck": "./bin/flightdeck.bin.js",
		"klaxon": "./bin/klaxon.bin.js"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.12.0",
		"atom.io": "workspace:*",
		"comline": "workspace:*",
		"cron": "4.1.1",
		"safedeposit": "workspace:*",
		"zod": "3.24.2"
	},
	"scripts": {
		"gen": "bun ./__scripts__/gen.bun.ts",
		"build": "tsup-node && rm -f dist/*.x.d.ts && bun ./__scripts__/build-lnav.bun.ts",
		"schema:flightdeck": "bun ./src/flightdeck.bin.ts --outdir=dist -- schema",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@biomejs/js-api": "0.7.1",
		"@biomejs/wasm-nodejs": "1.9.4",
		"@types/node": "22.13.13",
		"@types/tmp": "0.2.6",
		"bun-types": "1.2.6",
		"concurrently": "9.1.2",
		"eslint": "9.23.0",
		"json-schema-to-zod": "2.6.0",
		"rimraf": "6.0.1",
		"tmp": "0.2.3",
		"tsup": "8.4.0",
		"varmint": "workspace:*",
		"vitest": "3.0.9"
	}
}
