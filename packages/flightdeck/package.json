{
	"name": "flightdeck",
	"version": "0.2.41",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/flightdeck"
	},
	"type": "module",
	"files": [
		"dist",
		"gen",
		"src"
	],
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"bin": {
		"flightdeck": "./bin/flightdeck.bin.js",
		"klaxon": "./bin/klaxon.bin.js"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.13.8",
		"atom.io": "workspace:*",
		"comline": "workspace:*",
		"cron": "4.3.2",
		"safedeposit": "workspace:*",
		"zod": "3.25.76"
	},
	"scripts": {
		"gen": "bun ./__scripts__/gen.bun.ts",
		"build": "tsdown && rm -f dist/*.x.d.ts && bun ./__scripts__/build-lnav.bun.ts",
		"schema:flightdeck": "bun ./src/flightdeck.bin.ts --outdir=dist -- schema",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.2.18",
		"@biomejs/js-api": "2.0.3",
		"@biomejs/wasm-nodejs": "2.1.2",
		"@types/node": "24.0.14",
		"@types/tmp": "0.2.6",
		"concurrently": "9.2.0",
		"eslint": "9.31.0",
		"json-schema-to-zod": "2.6.1",
		"rimraf": "6.0.1",
		"tmp": "0.2.3",
		"tsdown": "0.12.9",
		"varmint": "workspace:*",
		"vitest": "3.2.4"
	}
}
