{
	"name": "socket-io.git",
	"version": "0.3.1",
	"type": "module",
	"description": "remote control a simple-git instance over a socket.io connection",
	"files": ["dist", "node", "web", "CHANGELOG.md", "README.md"],
	"exports": {
		"./package.json": "./package.json",
		"./socket-git-node": {
			"import": "./dist/socket-git-node.js",
			"require": "./dist/socket-git-node.cjs",
			"types": "./dist/socket-git-node.d.ts"
		}
	},
	"scripts": {
		"build": "tsup-node",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"peerDependencies": {
		"react": "^18.2.0 || ^19.0.0",
		"recoil": "^0.7.6",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0"
	},
	"dependencies": {
		"fp-ts": "2.16.9",
		"simple-git": "3.27.0"
	},
	"devDependencies": {
		"@types/node": "22.13.4",
		"@types/tmp": "0.2.6",
		"eslint": "9.20.1",
		"react": "19.0.0",
		"recoil": "0.7.7",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1",
		"tmp": "0.2.3",
		"tsup": "8.3.6",
		"typescript": "5.7.3",
		"vite": "6.1.0",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/socket-io.git"
	},
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka",
	"publishConfig": {
		"access": "public"
	}
}
