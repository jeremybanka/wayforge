	},
	"dependencies": {
		"fp-ts": "2.16.9",
		"simple-git": "3.27.0"
	},
	"devDependencies": {
		"@types/node": "22.13.0",
		"@types/tmp": "0.2.6",
		"eslint": "9.19.0",
		"react": "19.0.0",
		"recoil": "0.7.7",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1",
		"tmp": "0.2.3",
		"tsup": "8.3.6",
		"typescript": "5.7.3",
		"vite": "6.0.11",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.4"
