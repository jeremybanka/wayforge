{
	"name": "anvl",
	"version": "0.3.1",
	"type": "module",
	"description": "core typescript utilities for wayforge",
	"files": [
		"dist",
		"array",
		"function",
		"id",
		"join",
		"json",
		"json-api",
		"json-schema",
		"nullish",
		"number",
		"object",
		"primitive",
		"refinement",
		"string",
		"tree"
	],
	"scripts": {
		"build": "tsup",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"test": "vitest",
		"test:coverage": "echo no test coverage yet",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"eslint": "9.19.0",
		"tsup": "8.3.6",
		"typescript": "5.7.3",
		"vite": "6.1.0",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/anvl"
	},
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka",
	"publishConfig": {
		"access": "public"
	}
}
