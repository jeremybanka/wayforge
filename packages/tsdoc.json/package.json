{
	"name": "tsdoc.json",
	"version": "0.6.2",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"files": [
		"dist",
		"src",
		"react/dist",
		"react/package.json",
		"react/src"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"browser": "./dist/index.js"
		},
		"./react": {
			"types": "./react/dist/index.d.ts",
			"import": "./react/dist/index.js",
			"browser": "./react/dist/index.js"
		}
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@microsoft/tsdoc": "0.15.0",
		"colors": "1.4.0"
	},
	"scripts": {
		"clean:build": "find . -type d -name 'dist' -not -path '*/node_modules/*' | xargs rm -rf",
		"build": "bun run clean:build && concurrently \"bun:build:*\"",
		"build:main": "tsup",
		"build:types": "tsup --dts",
		"build:react": "cd react && tsup",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint .",
		"lint:types": "tsc --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint",
		"test": "bun test --watch -- **/*.test.ts",
		"test:once": "bun test -- **/*.test.ts",
		"test:coverage": "echo no test coverage yet"
	},
	"devDependencies": {
		"@types/bun": "1.1.4",
		"@types/npmlog": "7.0.0",
		"@types/react": "18.3.3",
		"concurrently": "8.2.2",
		"react": "18.3.1",
		"rimraf": "5.0.7",
		"tmp": "0.2.3",
		"tsup": "8.1.0",
		"typescript": "5.4.5"
	}
}
