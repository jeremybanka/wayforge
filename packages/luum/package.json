{
	"name": "luum",
	"version": "0.0.17",
	"type": "module",
	"description": "generate colors dynamically",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsdown src/index.ts --format=esm --dts --platform=neutral",
		"dev": "cd example && vite",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
