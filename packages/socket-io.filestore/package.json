{
	"name": "socket-io.filestore",
	"version": "0.0.0",
	"description": "save json to the filesystem over socket.io",
	"files": ["dist", "node", "web", "CHANGELOG.md", "README.md"],
	"scripts": {
		"build": "tsup --entry src/socket-filestore-node.ts --entry src/socket-filestore-recoil.ts --format cjs,esm --dts --external react,recoil,socket.io,socket.io-client",
		"lint:biome": "biome check --diagnostic-level=warn -- .",
		"lint:eslint": "eslint .",
		"lint": "npm run lint:biome && npm run lint:eslint",
		"test": "vitest",
		"test:coverage": "echo no test coverage yet",
		"test:once": "vitest run"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"recoil": "^0.7.6",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0"
	},
	"dependencies": {
		"fp-ts": "2.16.2"
	},
	"devDependencies": {
		"@types/node": "20.11.14",
		"@types/tmp": "0.2.6",
		"react": "18.2.0",
		"recoil": "0.7.7",
		"socket.io": "4.7.4",
		"socket.io-client": "4.7.4",
		"tmp": "0.2.1",
		"tsup": "8.0.1",
		"typescript": "5.3.3",
		"vite": "5.0.12",
		"vite-tsconfig-paths": "4.3.1",
		"vitest": "1.2.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git"
	},
