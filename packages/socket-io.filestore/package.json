{
	"name": "socket-io.filestore",
	"version": "0.1.1",
	"type": "module",
	"description": "save json to the filesystem over socket.io",
	"files": ["dist", "node", "web", "CHANGELOG.md", "README.md"],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup --entry src/socket-filestore-node.ts --entry src/socket-filestore-atom-cli.ts --format cjs,esm --dts --external atom.io,react,socket.io,socket.io-client",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"test": "vitest",
		"test:coverage": "echo no test coverage yet",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"peerDependencies": {
		"atom.io": "^0.30.7",
		"react": "^18.2.0 || ^19.0.0",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0"
	},
	"dependencies": {
		"fp-ts": "2.16.9"
	},
	"devDependencies": {
		"atom.io": "workspace:*",
		"@types/node": "22.13.0",
		"@types/tmp": "0.2.6",
		"react": "19.0.0",
		"recoil": "0.7.7",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1",
		"tmp": "0.2.3",
		"tsup": "8.3.6",
		"typescript": "5.7.3",
		"vite": "6.0.11",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/socket-io.filestore"
	},
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka"
}
