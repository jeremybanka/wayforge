{
	"name": "socket-io.filestore",
	"version": "3.0.1",
	"type": "module",
	"description": "save json to the filesystem over socket.io",
	"files": [
		"dist",
		"node",
		"web",
		"CHANGELOG.md",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		"./package.json": "./package.json",
		"./socket-filestore-node": {
			"types": "./dist/socket-filestore-node.d.ts",
			"import": "./dist/socket-filestore-node.js",
			"require": "./dist/socket-filestore-node.cjs"
		}
	},
	"scripts": {
		"build": "tsup-node --entry src/socket-filestore-node.ts --entry src/socket-filestore-atom-cli.ts --format cjs,esm --dts",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"peerDependencies": {
		"atom.io": "^0.33.9",
		"react": "^18.2.0 || ^19.0.0",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0"
	},
	"dependencies": {
		"anvl": "workspace:*",
		"fp-ts": "2.16.10",
		"ingt": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "24.2.0",
		"@types/tmp": "0.2.6",
		"concurrently": "9.2.0",
		"eslint": "9.32.0",
		"react": "19.1.1",
		"recoil": "0.7.7",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1",
		"tmp": "0.2.3",
		"tsup": "8.5.0",
		"vite": "7.0.6",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/socket-io.filestore"
	},
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka"
}
