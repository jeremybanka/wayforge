{
	"name": "socket-io.filestore",
	"version": "0.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git"
	},
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka",
	"type": "module",
	"description": "save json to the filesystem over socket.io",
	"scripts": {
		"build": "tsup --entry src/socket-filestore-node.ts --entry src/socket-filestore-recoil.ts --format cjs,esm --dts --external react,recoil,socket.io,socket.io-client",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint --flag unstable_ts_config -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"test": "vitest",
		"test:coverage": "echo no test coverage yet",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"recoil": "^0.7.6",
		"socket.io": "^4.6.0",
		"socket.io-client": "^4.6.0"
	},
	"dependencies": {
		"fp-ts": "2.16.9"
	},
	"devDependencies": {
		"@types/node": "22.9.0",
		"@types/tmp": "0.2.6",
		"react": "18.3.1",
		"recoil": "0.7.7",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1",
		"tmp": "0.2.3",
		"tsup": "8.3.5",
		"typescript": "5.6.3",
		"vite": "5.4.10",
		"vite-tsconfig-paths": "5.1.1",
		"vitest": "2.1.4"
	},
	"files": ["dist", "CHANGELOG.md", "README.md"],
	"exports": {
		"./package.json": "./package.json",
		"./node": {
			"types": "./dist/socket-filestore-node.d.ts",
			"import": "./dist/socket-filestore-node.js",
			"browser": "./dist/socket-filestore-node.js",
			"require": "./dist/socket-filestore-node.cjs"
		},
		"./recoil": {
			"types": "./dist/socket-filestore-recoil.d.ts",
			"import": "./dist/socket-filestore-recoil.js",
			"browser": "./dist/socket-filestore-recoil.js",
			"require": "./dist/socket-filestore-recoil.cjs"
		}
	}
}
