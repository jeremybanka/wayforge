{
	"name": "create-atom.io",
	"version": "0.0.0",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/create-atom"
	},
	"type": "module",
	"files": [
		"bin",
		"dist",
		"src",
		"templates"
	],
	"main": "dist/create-atom.js",
	"types": "dist/create-atom.d.ts",
	"bin": "./bin/create-atom.bin.js",
	"dependencies": {
		"@clack/prompts": "0.11.0",
		"comline": "workspace:*",
		"picocolors": "1.1.1",
		"tinyexec": "1.0.1",
		"zod": "3.25.76"
	},
	"scripts": {
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "bun test --watch -- **/*.test.ts",
		"test:once": "bun test -- **/*.test.ts",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@types/node": "24.9.1",
		"@types/bun": "npm:bun-types@1.3.1",
		"@types/tmp": "0.2.6",
		"@typescript/native-preview": "7.0.0-dev.20251025.1",
		"concurrently": "9.2.1",
		"eslint": "9.38.0",
		"rimraf": "6.0.1",
		"tmp": "0.2.5",
		"tsdown": "0.15.9"
	}
}
