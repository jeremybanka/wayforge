{
	"name": "varmint",
	"type": "module",
	"version": "0.4.10",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/varmint"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"bin": {
		"varmint": "bin/varmint.bin.js"
	},
	"files": ["dist", "src", "CHANGELOG.md"],
	"scripts": {
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"clean:build": "rm -rf dist",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "./bin/varmint.bin.js track && vitest run; ./bin/varmint.bin.js clean --ci-flag=CI",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"cachedir": "2.4.0",
		"comline": "workspace:*",
		"safedeposit": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "22.15.0",
		"@types/tmp": "0.2.6",
		"bun-types": "1.2.10",
		"concurrently": "9.1.2",
		"eslint": "9.25.1",
		"openai": "4.96.0",
		"tmp": "0.2.3",
		"tsdown": "0.9.6",
		"vite": "6.3.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.2",
		"yalc": "1.0.0-pre.53",
		"zod": "3.24.3"
	}
}
