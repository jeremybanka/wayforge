{
	"name": "varmint",
	"type": "module",
	"version": "0.5.2",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/varmint"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"bin": {
		"varmint": "bin/varmint.bin.js"
	},
	"files": [
		"dist",
		"src",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"clean:build": "rm -rf dist",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "./bin/varmint.bin.js track && vitest run; ./bin/varmint.bin.js clean --ci-flag=CI",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"cachedir": "2.4.0",
		"comline": "workspace:*",
		"safedeposit": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.2.17",
		"@types/node": "24.0.6",
		"@types/tmp": "0.2.6",
		"concurrently": "9.2.0",
		"eslint": "9.30.0",
		"openai": "5.8.2",
		"tmp": "0.2.3",
		"tsdown": "0.12.9",
		"vite": "7.0.0",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4",
		"yalc": "1.0.0-pre.53",
		"zod": "3.25.67"
	}
}
