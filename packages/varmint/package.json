{
	"name": "varmint",
	"type": "module",
	"version": "0.4.3",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/varmint"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"bin": {
		"varmint": "bin/varmint.bin.js"
	},
	"files": ["dist", "src", "CHANGELOG.md"],
	"scripts": {
		"build": "tsup-node && rm -f dist/*.x.d.ts",
		"clean:build": "rm -rf dist",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "./bin/varmint.bin.js track && vitest run; ./bin/varmint.bin.js clean --ci-flag=CI",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"cachedir": "2.4.0",
		"comline": "workspace:*",
		"safedeposit": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "22.13.9",
		"@types/tmp": "0.2.6",
		"bun-types": "1.2.4",
		"concurrently": "9.1.2",
		"eslint": "9.21.0",
		"openai": "4.86.2",
		"tmp": "0.2.3",
		"tsup": "8.4.0",
		"vite": "6.2.0",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.8",
		"yalc": "1.0.0-pre.53",
		"zod": "3.24.2"
	}
}
