{
	"name": "varmint",
	"type": "module",
	"version": "0.5.6",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/varmint"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"bin": {
		"varmint": "bin/varmint.bin.js"
	},
	"files": [
		"dist",
		"src",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"clean:build": "rm -rf dist",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "./bin/varmint.bin.js track && vitest run; ./bin/varmint.bin.js clean --ci-flag=CI",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"cachedir": "2.4.0",
		"comline": "workspace:*",
		"diff": "8.0.2",
		"fastest-levenshtein": "1.0.16",
		"picocolors": "1.1.1",
		"safedeposit": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.3.0",
		"@types/node": "24.9.0",
		"@types/tmp": "0.2.6",
		"@typescript/native-preview": "7.0.0-dev.20251019.1",
		"concurrently": "9.2.1",
		"eslint": "9.38.0",
		"openai": "6.6.0",
		"tmp": "0.2.5",
		"tsdown": "0.15.9",
		"vite": "7.1.11",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4",
		"yalc": "1.0.0-pre.53",
		"zod": "3.25.76"
	}
}
