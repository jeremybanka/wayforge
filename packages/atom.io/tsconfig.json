{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2023",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["vitest/globals"],
		"noEmit": true,
		"declaration": true,
		"allowJs": false,
		"isolatedDeclarations": true,
		"paths": {
			"atom.io": ["./src/main"],
			"atom.io/*": ["./src/*"]
		}
	},
	"include": [
		"src",
		"**/*.config.ts",
		"__tests__",
		"__scripts__",
		"__stories__",
		"__unstable__",
		".storybook/*.ts"
	]
}
