{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2023",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["vitest/globals"],
		"noEmit": true,
		"declaration": true,
		"allowJs": false,
		"isolatedDeclarations": true
	},
	"include": [
		"src",
		"**/src",
		"__tests__",
		"__scripts__",
		"__unstable__",
		"**/*.config.ts"
	]
}
