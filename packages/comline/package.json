{
	"name": "comline",
	"version": "0.1.7",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/comline"
	},
	"type": "module",
	"files": ["dist", "src"],
	"main": "dist/cli.js",
	"types": "dist/cli.d.ts",
	"dependencies": {
		"treetrunks": "workspace:*",
		"zod": "3.24.2",
		"zod-to-json-schema": "3.24.1"
	},
	"scripts": {
		"build:js": "bun build --outdir dist --target node --external zod --external zod-to-json-schema -- src/cli.ts",
		"build:dts": "tsup",
		"build": "concurrently \"bun:build:*\"",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"test": "vitest",
		"test:once": "vitest run",
		"test:coverage": "echo no test coverage yet",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@types/node": "22.13.2",
		"@types/tmp": "0.2.6",
		"bun-types": "1.2.2",
		"concurrently": "9.1.2",
		"eslint": "9.20.1",
		"tmp": "0.2.3",
		"tsup": "8.3.6",
		"vitest": "3.0.5"
	}
}
