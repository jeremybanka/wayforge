{
	"name": "hamr",
	"version": "3.0.4",
	"description": "core react and atom.io utilities for wayforge",
	"type": "module",
	"license": "MIT",
	"sideEffects": false,
	"author": "Jeremy Banka",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/hamr"
	},
	"scripts": {
		"manifest": "./__scripts__/manifest-build.node.ts",
		"clean:build": "find . -type d -name 'dist' -not -path '*/node_modules/*' | xargs rm -rf",
		"build": "tsdown",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"test:manifest": "./__scripts__/manifest-test.node.ts",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"@floating-ui/react": "0.27.16",
		"@floating-ui/react-dom": "2.1.6",
		"anvl": "workspace:*",
		"corners": "0.2.0",
		"luum": "workspace:*",
		"motion": "12.23.26"
	},
	"peerDependencies": {
		"@floating-ui/react": "^0.25.0 || ^0.26.0 || ^0.27.0",
		"@floating-ui/react-dom": "^2.0.2",
		"@vitejs/plugin-react": "^4.0.4 || ^5.0.0",
		"ajv": "^8.12.0",
		"atom.io": "^0.40.7",
		"corners": "^0.1.0 || ^0.2.0",
		"motion": "^10.15.1 || ^11.0.0 || ^12.0.0",
		"react": "^18.2.0 || ^19.0.0",
		"react-router-dom": "^6.8.1 || ^7.0.0"
	},
	"devDependencies": {
		"@emotion/styled": "11.14.1",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.1",
		"@types/jsdom": "27.0.0",
		"@types/react": "19.2.7",
		"@typescript/native-preview": "7.0.0-dev.20260101.1",
		"@vitejs/plugin-react": "5.1.2",
		"concurrently": "9.2.1",
		"eslint": "9.39.2",
		"happy-dom": "20.0.11",
		"jsdom": "27.4.0",
		"preact": "10.28.1",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-router-dom": "7.11.0",
		"sass": "1.97.1",
		"takua": "workspace:*",
		"tsdown": "0.18.4",
		"vite-plugin-dts": "4.5.4",
		"vite-tsconfig-paths": "6.0.3",
		"vitest": "4.0.16"
	},
	"files": [
		"dist",
		"src"
	],
	"exports": {
		"./package.json": null,
		"./atom.io-combo/package.json": "./atom.io-combo/package.json",
		"./atom.io-combo": {
			"types": "./dist/atom.io-combo/index.d.ts",
			"browser": "./dist/atom.io-combo/index.js",
			"import": "./dist/atom.io-combo/index.js",
			"require": "./dist/atom.io-combo/index.cjs"
		},
