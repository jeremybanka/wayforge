{
	"name": "break-check",
	"version": "0.6.13",
	"license": "MIT",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "packages/break-check"
	},
	"type": "module",
	"files": ["bin", "dist", "src", "break-check.schema.json"],
	"main": "dist/break-check.js",
	"types": "dist/break-check.d.ts",
	"bin": {
		"break-check": "./bin/break-check.bin.js"
	},
	"dependencies": {
		"comline": "workspace:*",
		"minimatch": "10.0.1",
		"npmlog": "7.0.1",
		"simple-git": "3.27.0",
		"zod": "3.24.3"
	},
	"scripts": {
		"build": "tsdown && rm -f dist/*.x.d.ts && pnpm run schema",
		"schema": "bun src/break-check.x.ts --outdir=dist -- schema",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "bun test --watch -- **/*.test.ts",
		"test:once": "bun test -- **/*.test.ts",
		"postversion": "biome format --write package.json"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.2.10",
		"@types/npmlog": "7.0.0",
		"@types/tmp": "0.2.6",
		"concurrently": "9.1.2",
		"eslint": "9.25.1",
		"rimraf": "6.0.1",
		"tmp": "0.2.3",
		"tsdown": "0.9.9"
	}
}
