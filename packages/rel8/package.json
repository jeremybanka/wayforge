{
	"name": "rel8",
	"version": "0.0.1",
	"description": "Utilities for managing relations between data.",
	"files": [
		"**/*"
	],
	"exports": {
		"./junction/package.json": "./junction/package.json",
		"./junction": {
			"types": "./junction/dist/index.d.ts",
			"browser": "./junction/dist/index.mjs",
			"import": "./junction/dist/index.mjs",
			"require": "./junction/dist/index.js"
		},
		"./types/package.json": "./types/package.json",
		"./types": {
			"types": "./types/dist/index.d.ts",
			"browser": "./types/dist/index.mjs",
			"import": "./types/dist/index.mjs",
			"require": "./types/dist/index.js"
		}
	},
	"scripts": {
		"build": "concurrently \"npm:build:*\"",
		"build:junction": "cd junction && tsup",
		"build:types": "cd types && tsup",
		"lint": "concurrently \"npm:lint:*\"",
		"lint:rome": "rome check .",
		"lint:eslint": "eslint .",
		"test": "vitest",
		"test:once": "vitest run"
	},
	"devDependencies": {
		"concurrently": "8.2.0",
		"eslint": "8.47.0",
		"tsup": "7.2.0",
		"typescript": "5.1.6",
		"vite": "4.4.9",
		"vite-tsconfig-paths": "4.2.0",
		"vitest": "0.34.1"
	},
	"keywords": [
		"relation",
		"data",
		"relational",
		"join",
		"bridge",
		"junction"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git"
	},
	"license": "MIT",
	"author": "Jeremy Banka",
	"publishConfig": {
		"access": "public"
	}
}
