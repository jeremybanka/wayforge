{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["DOM", "es2023", "ES2023.Array"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"module": "preserve",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"baseUrl": "./",
		"paths": {
			"anvl/*": ["./packages/anvl/src/*"],
			"atom.io": ["./packages/atom.io/src"],
			"atom.io/*": ["./packages/atom.io/*/src"],
			"break-check": ["./packages/break-check/src/break-check.ts"],
			"flightdeck": ["packages/flightdeck/src/lib.ts"],
			"hamr/*": ["./packages/hamr/*/src"],
			"rel8": ["packages/rel8/types/src"],
			"rel8/*": ["packages/rel8/*/src"],
			"tsdoc.json": ["packages/tsdoc.json/src"],
			"tsdoc.json/*": ["packages/tsdoc.json/*/src"],
			"varmint": ["./packages/varmint/src/index.ts"],
			"wayfarer.quest/*": ["./apps/wayfarer.quest/src/*"],
			"~/*": ["./*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"useUnknownInCatchVariables": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.config.ts",
		"**/*.schema.json.ts",
		"**/*.js"
	],
	"exclude": ["*/**/node_modules", "*/**/dist", "apps/edge/viceroy-htmx"]
}
