{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["DOM", "es2023", "ES2023.Array"],
		"jsx": "preserve",
		"jsxImportSource": "",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"baseUrl": "./",
		"paths": {
			"anvl/*": ["./packages/anvl/src/*"],
			"hamr/*": ["./packages/hamr/*/src"],
			"luum": ["packages/luum/src"],
			"rel8": ["packages/rel8/types/src"],
			"rel8/*": ["packages/rel8/*/src"],
			"socket-io.git/*": ["./packages/socket-io.git/src/*"],
			"socket-io.filestore/*": ["./packages/socket-io.filestore/src/*"],
			"atom.io": ["./packages/atom.io/src"],
			"atom.io/*": ["./packages/atom.io/*/src"],
			"break-check": ["./packages/break-check/src/break-check.ts"],
			"wayfarer.quest/*": ["./apps/wayfarer.quest/src/*"],
			"~/*": ["./*"]
		},
		"types": ["vitest/globals"],
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"useUnknownInCatchVariables": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"references": [
		{ "path": "./apps/node/forge" },
		{ "path": "./apps/node/kite" },
		{ "path": "./apps/web/sample" },
		{ "path": "./apps/web/shrine" },
		{ "path": "./apps/web/smithy" },
		{ "path": "./apps/web/strand" },
		{ "path": "./packages/anvl" },
		{ "path": "./packages/atom.io" },
		{ "path": "./packages/break-check" },
		{ "path": "./packages/hamr" },
		{ "path": "./packages/ingt" },
		{ "path": "./packages/luum" },
		{ "path": "./packages/occlusion" },
		{ "path": "./packages/rel8" },
		{ "path": "./packages/socket-io.filestore" },
		{ "path": "./packages/socket-io.git" }
	],
	"files": [],
	"exclude": ["*/**/node_modules", "*/**/dist"]
}
