{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "**/dist/*", "**/dist/**/*"],
			"inputs": [
				"**/package.json",
				"src/**/*.scss",
				"src/**/*.mdx",
				"src/**/*.tsx",
				"src/**/*.ts",
				"**/src/**/*.scss",
				"**/src/**/*.mdx",
				"**/src/**/*.tsx",
				"**/src/**/*.ts"
			]
		},
		"test:once": {
			"dependsOn": ["build"],
			"inputs": [
				"**/package.json",
				"src/**/*.tsx",
				"src/**/*.ts",
				"src/**/*.scss",
				"src/**/*.mdx",
				"**/src/**/*.tsx",
				"**/src/**/*.ts",
				"**/src/**/*.scss",
				"**/src/**/*.mdx",
				"__tests__/**/*.ts",
				"__tests__/**/*.tsx",
				"__scripts__/**/*.ts"
			]
		},
		"test:coverage": {
			"outputs": ["coverage/**", "**/coverage/*", "**/coverage/**/*"],
			"inputs": [
				"**/package.json",
				"src/**/*.tsx",
				"src/**/*.ts",
				"src/**/*.scss",
				"src/**/*.mdx",
				"**/src/**/*.tsx",
				"**/src/**/*.ts",
				"**/src/**/*.scss",
				"**/src/**/*.mdx",
				"__tests__/**/*.ts",
				"__tests__/**/*.tsx",
				"__scripts__/**/*.ts"
			]
		},
		"lint:biome": {
			"cache": false
		},
		"lint:eslint": {
			"inputs": ["**/*.ts", "**/*.tsx", "eslint.config.js"]
		},
		"lint:typescript": {
			"inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig.json"]
		},
		"lint": {
			"dependsOn": ["lint:biome", "lint:eslint", "lint:typescript"]
		},
		"deploy": {
			"dependsOn": ["build", "test:once", "lint"]
		},
		"globalDependencies": {
			"inputs": ["bun.lockb"]
		}
	}
}
