{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "**/dist/*", "**/dist/**/*"],
			"inputs": [
				"**/package.json",
				"src/**/*.scss",
				"src/**/*.mdx",
				"src/**/*.tsx",
				"src/**/*.ts",
				"**/src/**/*.scss",
				"**/src/**/*.mdx",
				"**/src/**/*.tsx",
				"**/src/**/*.ts"
			]
		},
		"test:once": {
			"dependsOn": ["build"],
			"inputs": [
				"**/package.json",
				"src/**/*.tsx",
				"src/**/*.ts",
				"src/**/*.scss",
				"src/**/*.mdx",
				"**/src/**/*.tsx",
				"**/src/**/*.ts",
				"**/src/**/*.scss",
				"**/src/**/*.mdx",
				"__test__/**/*.ts",
				"__test__/**/*.tsx"
			]
		},
		"lint:biome": {
			"cache": false
		},
		"lint:eslint": {},
		"lint": {
			"dependsOn": ["lint:biome", "lint:eslint"]
		},
		"deploy": {
			"dependsOn": ["build", "test:once", "lint"]
		},
		"globalDependencies": {
			"inputs": ["pnpm-lock.yaml"]
		}
	}
}
