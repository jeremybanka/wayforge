{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test:once": {
			"dependsOn": ["build"],

			"inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
		},
		"lint": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["build", "test:once", "lint"]
		},
		"globalDependencies": {
			"inputs": [".eslintrc.js"]
		}
	}
}
