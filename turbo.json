{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "**/dist/*", "**/dist/**/*"],
			"inputs": [
				"**/package.json",
				"src/**/*.{ts,tsx,scss,mdx}",
				"**/src/**/*.{ts,tsx,scss,mdx}"
			]
		},
		"test:once": {
			"dependsOn": ["build"],
			"inputs": [
				"**/package.json",
				"src/**/*.{ts,tsx,scss,mdx}",
				"**/src/**/*.{ts,tsx,scss,mdx}",
				"__tests__/**/*.{ts?x}",
				"__scripts__/**/*.ts"
			]
		},
		"test:coverage": {
			"outputs": ["coverage/**", "**/coverage/*", "**/coverage/**/*"],
			"inputs": [
				"**/package.json",
				"src/**/*.{ts,tsx,scss,mdx}",
				"**/src/**/*.{ts,tsx,scss,mdx}",
				"__tests__/**/*.{ts?x}",
				"__scripts__/**/*.ts"
			]
		},
		"test:semver": {
			"dependsOn": ["build"],
			"inputs": [
				"break-check.config.json",
				"**/package.json",
				"src/**/*.{ts,tsx,scss,mdx}",
				"**/src/**/*.{ts,tsx,scss,mdx}",
				"__tests__/public/**/*.test.{ts,tsx}",
				"__scripts__/**/*.ts"
			]
		},
		"lint:biome": {
			"cache": false
		},
		"lint:eslint": {
			"inputs": ["**/*.ts", "**/*.tsx", "../../eslint.config.js"]
		},
		"lint": {
			"dependsOn": ["lint:biome", "lint:eslint"]
		},
		"deploy": {
			"dependsOn": ["build", "test:once", "lint"]
		},
		"globalDependencies": {
			"inputs": ["pnpm.lockb", "tsconfig.json"]
		}
	}
}
