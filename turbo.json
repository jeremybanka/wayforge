{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist", "**/dist"],
			"inputs": ["src", "**/src"]
		},
		"test:once": {
			"dependsOn": ["build"],
			"inputs": ["src", "**/src", "__test__"]
		},
		"lint:biome": {
			"cache": false
		},
		"lint:eslint": {},
		"lint": {
			"dependsOn": ["lint:biome", "lint:eslint"]
		},
		"deploy": {
			"dependsOn": ["build", "test:once", "lint"]
		},
		"globalDependencies": {
			"inputs": ["pnpm-lock.yaml"]
		}
	}
}
