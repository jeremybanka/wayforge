{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"files": {
		"maxSize": 200000000,
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/metafile-*",
			"!**/*.gen.ts",
			"!**/*.gen.tsx",
			"!**/*.tsdoc.json",
			"!**/.turbo",
			"!**/.varmint",
			"!**/.wrangler",
			"!**/app/**/*",
			"!**/bin/**/*",
			"!**/coverage",
			"!**/dist/**/*",
			"!**/drizzle/meta",
			"!**/heap.json",
			"!**/node_modules/**/*",
			"!**/projects"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 81,
		"includes": ["**", "!**/*.gen.ts", "!**/*.cache.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"useValidTypeof": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noCommaOperator": "off",
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"noThenProperty": "off"
			},
			"style": {
				"noDescendingSpecificity": "off",
				"noInferrableTypes": "error",
				"noParameterAssign": "off",
				"noUnusedTemplateLiteral": "off",
				"noUselessElse": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useImportType": "off",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useShorthandFunctionType": "off",
				"useSingleVarDeclarator": "error",
				"useTemplate": "off"
			}
		}
	}
}
