{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"maxSize": 200000000,
		"ignoreUnknown": true,
		"ignore": [
			"**/metafile-*",
			"*.gen.ts",
			"*.gen.tsx",
			"*.tsdoc.json",
			".turbo",
			".varmint",
			".wrangler",
			"app/**/*",
			"bin/**/*",
			"coverage",
			"dist/**/*",
			"drizzle/meta",
			"heap.json",
			"node_modules/**/*",
			"projects"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 81,
		"ignore": ["**/*.gen.ts", "**/*.cache.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"noThenProperty": "off",
				"useValidTypeof": "off"
			},
			"style": {
				"noCommaOperator": "off",
				"noParameterAssign": "off",
				"noUnusedTemplateLiteral": "off",
				"useImportType": "off",
				"useShorthandFunctionType": "off",
				"useTemplate": "off"
			}
		}
	}
}
