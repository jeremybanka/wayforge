{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["DOM", "DOM.iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"wayfarer.quest/*": ["./src/*"]
		},
		"strict": false
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"dist/types/**/*.ts"
	]
}
