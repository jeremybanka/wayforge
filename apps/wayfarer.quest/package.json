{
	"name": "wayfarer.quest",
	"type": "module",
	"version": "0.1.1",
	"private": true,
	"scripts": {
		"env": "[ -f .env.development ] && echo '.env.development already present' || cp .env.defaults .env",
		"dev": "bun run env && concurrently \"npm:dev:*\"",
		"dev:next": "next dev -p 4500",
		"build": "bun run env && bun build:next",
		"build:next": "next build",
		"start": "next start -p 4545",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "echo no tests yet",
		"test:once": "echo no tests yet"
	},
	"dependencies": {
		"@t3-oss/env-nextjs": "0.13.8",
		"@vercel/analytics": "1.5.0",
		"corners": "0.2.0",
		"luum": "workspace:*",
		"motion": "12.23.12",
		"nanoid": "5.1.5",
		"next": "15.5.0",
		"occlusion": "workspace:*",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"socket.io-client": "4.8.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@svgr/webpack": "8.1.0",
		"@types/node": "24.3.0",
		"@types/react": "19.1.11",
		"@types/react-dom": "19.1.7",
		"concurrently": "9.2.0",
		"eslint": "9.34.0",
		"eslint-config-next": "15.5.0",
		"typescript": "5.9.2"
	}
}
