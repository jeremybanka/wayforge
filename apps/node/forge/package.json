{
	"name": "@wayforge/forge",
	"private": true,
	"scripts": {
		"dev": "tsx watch src/main.ts",
		"gen:zod": "tsx ./src/script/build-zod.node.ts",
		"build": "echo zero-build app powered by tsx",
		"test": "vitest",
		"test:once": "cross-env CI=true vitest run",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types"
	},
	"dependencies": {
		"dotenv": "16.4.7",
		"fp-ts": "2.16.9",
		"io-ts": "2.2.22",
		"json-schema": "0.4.0",
		"json-schema-to-zod": "2.6.0",
		"npmlog": "7.0.1",
		"prettier": "3.5.1",
		"simple-git": "3.27.0",
		"socket.io": "4.8.1",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@types/npmlog": "7.0.0",
		"cross-env": "7.0.3",
		"eslint": "9.20.1",
		"tsx": "4.19.2",
		"vitest": "3.0.5"
	}
}
