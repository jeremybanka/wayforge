{
	"name": "@wayforge/lodge",
	"description": "cards and dice server",
	"private": true,
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"build": "tsup src/main.ts --format esm --minify --clean --sourcemap --legacy-output --outDir dist",
		"start": "bun ./dist/esm/main.js",
		"test": "vitest",
		"test:coverage": "echo no test coverage yet",
		"test:once": "cross-env CI=true vitest run",
		"lint:biome": "biome check --diagnostic-level=warn -- .",
		"lint:eslint": "eslint .",
		"lint": "npm run lint:biome && npm run lint:eslint"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.9.2",
		"dotenv": "16.4.4",
		"express": "4.18.2",
		"fp-ts": "2.16.2",
		"lodash": "4.17.21",
		"nanoid": "5.0.5",
		"npmlog": "7.0.1",
		"socket.io": "4.7.4",
		"socketio-auth": "0.1.1",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"socket.io-client": "4.7.4",
		"tsup": "8.0.2",
		"vite": "5.1.2",
		"vite-tsconfig-paths": "4.3.1",
		"vitest": "1.2.2"
	}
}
