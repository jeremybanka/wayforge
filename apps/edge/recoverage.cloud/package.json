{
	"name": "recoverage-server",
	"type": "module",
	"scripts": {
		"go": "pnpm db:up --remote && pnpm gen && pnpm run deploy",
		"gen": "bun __scripts__/gen-scripts.bun.ts",
		"dev": "wrangler dev --live-reload",
		"deploy": "wrangler deploy --minify",
		"test": "vitest",
		"test:once": "vitest run",
		"db:gen": "drizzle-kit generate",
		"db:up": "wrangler d1 migrations apply recoverage-data",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\""
	},
	"dependencies": {
		"arktype": "2.1.7",
		"bun": "1.2.4",
		"drizzle-orm": "0.40.0",
		"hono": "4.7.4",
		"htmx.org": "2.0.4",
		"nanoid": "5.1.2",
		"octokit": "4.1.2"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.7.7",
		"@cloudflare/workers-types": "4.20250303.0",
		"@hono/vite-build": "1.3.0",
		"@hono/vite-dev-server": "0.19.0",
		"@octokit/types": "13.8.0",
		"bun-types": "1.2.4",
		"cloudflare": "4.1.0",
		"concurrently": "9.1.2",
		"drizzle-kit": "0.30.5",
		"eslint": "9.21.0",
		"fast-xml-parser": "5.0.8",
		"recoverage": "workspace:*",
		"vite": "6.2.1",
		"vitest": "3.0.8",
		"wrangler": "3.114.0"
	}
}
