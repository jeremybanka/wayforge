{
	"name": "tempest.games",
	"version": "0.3.22",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/wayforge.git",
		"directory": "apps/tempest.games"
	},
	"type": "module",
	"bin": {
		"frontend": "./bin/frontend.bun.js",
		"backend": "./bin/backend.bun.js",
		"setup-db": "./bin/setup-db.bun.js",
		"interactive-db": "./bin/interactive-db.bun.js"
	},
	"files": [
		"app",
		"bin",
		"CHANGELOG.md",
		"drizzle",
		"drizzle.config.ts",
		"index.html"
	],
	"scripts": {
		"dev": "bun run env:dev && concurrently \"bun:dev:*\"",
		"dev:vite": "vite --port 3333",
		"dev:backend": "bun --hot --no-clear-screen --env-file=.env.development ./src/backend.bun.ts",
		"dev:email": "bun --env-file=.env.development email dev",
		"dev:db": "pnpm run db:dev",
		"build": "rimraf ./bin && ([ $PREVIEW ] && bun run env:pre || bun run env:prod) && concurrently \"bun:build:*\"",
		"build:bun": "./build.bun.ts",
		"build:vite": "[ $PREVIEW ] && vite build --mode preview || vite build --mode production",
		"preview": "cross-env PREVIEW=true nr build && concurrently \"bun:preview:*\"",
		"preview:frontend": "bun --env-file=.env.preview bin/frontend.bun.js",
		"preview:backend": "bun --env-file=.env.preview bin/backend.bun.js",
		"env:dev": "[ -f .env.development ] && echo '.env.development already present' || cp .env.defaults .env.development",
		"env:pre": "[ -f .env.preview ] && echo '.env.preview already present' || cp .env.defaults .env.preview",
		"env:test": "[ -f .env.test ] && echo '.env.test already present' || cp .env.defaults .env.test",
		"env:prod": "[ -f .env.production ] && echo '.env.production already present' || echo 'VITE_BACKEND_ORIGIN=https://realtime.tempest.games' >> .env.production && echo 'VITE_HIDE_DEVTOOLS=true' >> .env.production",
		"test": "bun env:test && vitest",
		"test:once": "bun env:test && varmint track && vitest run; varmint clean --ci-flag=CI",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"db:dev": "dotenv -e .env.development -- ./__scripts__/interactive-db.bun.ts",
		"db:gen": "dotenv -e .env.development -- drizzle-kit generate",
		"db:nuke": "./__scripts__/destroy-db.bun.ts",
		"db:setup": "./__scripts__/setup-db.bun.ts"
	},
	"dependencies": {
		"@floating-ui/react": "0.27.17",
		"@js-temporal/polyfill": "0.5.1",
		"@react-email/components": "1.0.7",
		"@react-spring/three": "10.0.3",
		"@react-three/drei": "10.7.7",
		"@react-three/fiber": "9.5.0",
		"@t3-oss/env-core": "0.13.10",
		"@trpc/client": "11.9.0",
		"@trpc/server": "11.9.0",
		"arktype": "2.1.29",
		"atom.io": "workspace:*",
		"cron": "4.4.0",
		"drizzle-orm": "0.45.1",
		"motion": "12.34.0",
		"nanoid": "5.1.6",
		"openai": "6.18.0",
		"postgres": "3.4.8",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-email": "5.2.8",
		"resend": "6.9.1",
		"safedeposit": "workspace:*",
		"safegen": "0.8.4",
		"socket.io": "4.8.3",
		"socket.io-client": "4.8.3",
		"three": "0.182.0",
		"three-stdlib": "2.36.1",
		"treetrunks": "workspace:*"
	},
	"devDependencies": {
		"@react-email/preview-server": "5.2.8",
		"@types/bun": "npm:bun-types@1.3.9",
		"@types/cors": "2.8.19",
		"@types/node": "25.2.2",
		"@types/react": "19.2.13",
		"@types/react-dom": "19.2.3",
		"@types/three": "0.182.0",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react-swc@4.2.3",
		"concurrently": "9.2.1",
		"cors": "2.8.6",
		"cross-env": "10.1.0",
		"dotenv": "17.2.4",
		"dotenv-cli": "11.0.0",
		"drizzle-kit": "0.31.9",
		"eslint": "10.0.0",
		"flightdeck": "workspace:*",
		"globals": "17.3.0",
		"rimraf": "6.1.2",
		"sass-embedded": "1.97.3",
		"varmint": "workspace:*",
		"vite": "7.3.1",
		"vite-tsconfig-paths": "6.1.0",
		"vitest": "4.0.18"
	}
}
