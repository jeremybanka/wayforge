{
	"name": "tempest.games",
	"version": "0.1.6",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"bin": {
		"frontend": "./bin/frontend.bun.js",
		"backend": "./bin/backend.bun.js",
		"setup-db": "./bin/setup-db.bun.js"
	},
	"files": ["app", "bin", "CHANGELOG.md", "drizzle", "index.html"],
	"scripts": {
		"dev": "bun run env:dev && concurrently \"bun:dev:*\"",
		"dev:vite": "vite --port 3333",
		"dev:backend": "cross-env RUN_WORKERS_FROM_SOURCE=true PORT=4444 bun --hot ./src/backend.bun.ts",
		"build": "bun run env:prod rimraf ./bin && concurrently \"bun:build:*\"",
		"build:vite": "vite build",
		"build:bun": "./build.bun.ts",
		"preview": "nr build && concurrently \"bun:preview:*\"",
		"preview:frontend": "./bin/frontend.bun.js",
		"preview:backend": "./bin/backend.bun.js",
		"env:dev": "[ -f .env ] && echo 'env already present' || cp .env.defaults .env.development",
		"env:test": "[ -f .env ] && echo 'env already present' || cp .env.defaults .env.test",
		"env:prod": "[ -f .env ] && echo 'env already present' || echo 'VITE_BACKEND_ORIGIN=https://realtime.tempest.games' >> .env.production",
		"test": "vitest",
		"test:once": "bun run env:test && vitest run",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint --flag unstable_ts_config -- .",
		"lint:types": "tsc --noEmit",
		"lint:types:watch": "tsc --watch --noEmit",
		"lint": "bun run lint:biome && bun run lint:eslint && bun run lint:types",
		"postversion": "biome format --write package.json",
		"db:dev": "drizzle-kit studio",
		"db:gen": "drizzle-kit generate",
		"db:nuke": "./__scripts__/destroy-db.bun.ts",
		"db:setup": "./__scripts__/setup-db.bun.ts"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.11.1",
		"atom.io": "workspace:*",
		"cron": "3.1.7",
		"drizzle-orm": "0.35.1",
		"openai": "4.68.0",
		"postgres": "3.4.4",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"safegen": "0.0.4",
		"socket.io": "4.8.0",
		"socket.io-client": "4.8.0",
		"treetrunks": "workspace:*",
		"zod": "3.23.8",
		"zod-to-json-schema": "3.23.3"
	},
	"devDependencies": {
		"@eslint/js": "9.12.0",
		"@types/node": "22.7.6",
		"@types/react": "18.3.11",
		"@types/react-dom": "18.3.1",
		"@vitejs/plugin-react-swc": "3.7.1",
		"bun-types": "1.1.31",
		"concurrently": "9.0.1",
		"cross-env": "7.0.3",
		"dotenv": "16.4.5",
		"dotenv-cli": "7.4.2",
		"drizzle-kit": "0.26.2",
		"eslint": "9.12.0",
		"eslint-plugin-react-refresh": "0.4.12",
		"globals": "15.11.0",
		"rimraf": "6.0.1",
		"sass-embedded": "1.80.2",
		"tsx": "4.19.1",
		"typescript": "5.6.3",
		"typescript-eslint": "8.10.0",
		"varmint": "workspace:*",
		"vite": "5.4.9",
		"vite-tsconfig-paths": "5.0.1",
		"vitest": "2.1.3"
	}
}
