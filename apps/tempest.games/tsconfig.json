{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"src/*": ["./src/*"],
			"@/*": ["./src/app/*"],
			"atom.io": ["../../packages/atom.io/src"],
			"atom.io/*": ["../../packages/atom.io/*/src"],
			"hamr/*": ["../../packages/hamr/src/*"],
			"~/*": ["../../*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"dist/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
